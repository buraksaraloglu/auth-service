{
  "compilerOptions": {
    "target": "es6",
    "resolveJsonModule": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": true,
    "removeComments": true,
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["api/*"]
    }
  },
  "include": ["api/**/*"]
}
